<div class="page-header">
  <h2>Our CookieBook</h2>
</div>
<p class ="btn btn-default"><%= link_to 'New Status', new_status_path %><p>
<% @statuses.each do |status| %>
<div class="status">
  <p><strong><%= status.name %></strong>
    <%= status.content %></p>
  <p><%= link_to time_ago_in_words(status.created_at)  + " ago" %> | <%= link_to "Back", statuses_path %> | <span><%= link_to "Edit", edit_status_path(status) %> |
    <%= link_to "Delete", status_path(status), method: :delete,
    data: { confirm: 'Are you sure you want to delete this status?' } %> </span></p>
</div>
<% end %>
